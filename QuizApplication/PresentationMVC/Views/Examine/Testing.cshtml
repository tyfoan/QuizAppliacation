    {
    int radio = 0;
    foreach (var item in Model)
    {
    <h4>@item.QuestionContent</h4>
    <hr />
    <ul class="Testing">
        @foreach (var innerItem in item.Answers)
        {
        <li>
            <label><input type="radio" name="name @radio" value="" /> @innerItem.ContentAnswer </label>
        </li>
        }
    </ul>
    radio += 1;
    }
    <input type="submit" class="btn btn-success" value="Закончить тест">
    }
</div>
